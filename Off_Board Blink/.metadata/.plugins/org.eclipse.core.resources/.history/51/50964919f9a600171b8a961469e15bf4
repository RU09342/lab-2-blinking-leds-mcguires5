#include <msp430.h>				


/**
 * blink.c
 */
 int Thresh = 1;
void main(void)
{
	WDTCTL = WDTPW | WDTHOLD;		// stop watchdog timer
	P1DIR |= (BIT0 + BIT4);					// configure P1.0 as output
	P1DIR |= BIT4;
	P1REN |= (BIT3);    //Enables the resistor for P1 Bit 3
	P1OUT |= (BIT3);    //Sets resistor to pull up
	P1IN &= 0;


	P1IFG &= ~(BIT3);
	P1IE |= (BIT3);
	P1IES |= BIT3;

	volatile unsigned int i;		// volatile to prevent optimization
	int toggleLed2 = 0;
	__bis_SR_register(AM + GIE);       // Enter LPM4 w/interrupt
	while(1) {
	        volatile unsigned int i;
	        P1OUT ^= (BIT0);// Toggle P1.0 using exclusive-OR

	        if(toggleLed2 == Thresh){
	            P1OUT ^= (BIT4);
	            toggleLed2 = 0;
	        }
	        toggleLed2 = toggleLed2 + 1;
	        __delay_cycles(100000);
	    }

}
#pragma vector=PORT1_VECTOR
__interrupt void Port_1(void)
{
    if(Thresh >= 8){
         Thresh = 1;
    }else{
         Thresh = Thresh * 2;
    }
    P1IFG &= ~BIT3;

}
