#include <msp430.h> 


/**
 * main.c
 */
int main(void)
{
	WDTCTL = WDTPW | WDTHOLD;	// stop watchdog timer
	P1DIR |= (0x01);
	P2DIR &= ~(BIT3);
	P2REN |= (BIT1);
	P2OUT |= (BIT1);

	int number = P2IN & BIT1;
	while(1){
	   if(number == 0){
	       P1OUT |= BIT0;
	   }else{
	       P1OUT &= ~BIT0;
	   }

	}
	return 0;
}
