#include <msp430.h> 


/**
 * main.c
 */
int main(void)
{
	WDTCTL = WDTPW | WDTHOLD;	// stop watchdog timer
	P1DIR |= (0x01);
	P2DIR &= ~(BIT3);
	P2REN |= (BIT1);
	P2OUT |= (BIT1);

	while(1){
	    int tmp = P2IN;
	    tmp |= (BIT1);
	    if(tmp == P2IN){
	        P1OUT ^= (0x01);
	    }
	}
	return 0;
}
